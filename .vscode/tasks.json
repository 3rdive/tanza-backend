{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build NestJS project",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "problemMatcher": ["$tsc"],
      "group": "build"
    },
    {
      "label": "Watch NestJS project",
      "type": "shell",
      "command": "npm",
      "args": ["run", "start:dev"],
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*File change detected.*",
          "endsPattern": "^.*Nest application successfully started.*"
        }
      },
      "group": "build"
    }
  ]
}
